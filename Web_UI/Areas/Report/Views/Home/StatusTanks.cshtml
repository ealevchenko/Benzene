    <script src="~/Scripts/shared/common.js" type="text/javascript"></script>
    <script src="~/Scripts/api/api_benzene.js" type="text/javascript"></script>
    <script src="~/Scripts/report/reports_status_tanks.js" type="text/javascript"></script>
}

<div class="card border-info mb-3">
    <div class="card-header bg-info text-white">
        Текущее время :<label id="date-value"></label>
    </div>
    <div class="card-body">
        <div class="tanks-all">
            <div class="tanks-fuel">
                <fieldset>
                    <legend> Бензол </legend>
                    <div>
                        @* Т1 *@
                        <div class="tank" id="tank-B1">
                            <fieldset>
                                <legend><a href="#" target="_blank">Емкость Т1</a></legend>
                                <div class="tank-value">
                                    <table class="table-tank">
                                        <tr>
                                            <th>H(%):</th>
                                            <td><input id="tank-1-hp" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>H(мм):</th>
                                            <td><input id="tank-1-h" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>W(мм):</th>
                                            <td><input id="tank-1-w" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>V(м3):</th>
                                            <td><input id="tank-1-v" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>V15(м3):</th>
                                            <td><input id="tank-1-v" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>M(т):</th>
                                            <td><input id="tank-1-m" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>P(кг/м3):</th>
                                            <td><input id="tank-1-pd" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>P15(кг/м3):</th>
                                            <td><input id="tank-1-ps" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>T(°С):</th>
                                            <td><input id="tank-1-t" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="tank-pb">
                                    <div class="progressbar">
                                        <span class="progressbar-value" id="pb-1-value">
                                            <em class="progressbar-cover" id="pb-1-cover"></em>
                                        </span>
                                    </div>
                                </div>
                                <div class="cls"></div>
                            </fieldset>
                        </div>
                        @* Т2 *@
                        <div class="tank" id="tank-B2">
                            <fieldset>
                                <legend><a href="#" target="_blank">Емкость Т2</a></legend>
                                <div class="tank-value">
                                    <table class="table-tank">
                                        <tr>
                                            <th>H(%):</th>
                                            <td><input id="tank-2-hp" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>H(см):</th>
                                            <td><input id="tank-2-h" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>W(см):</th>
                                            <td><input id="tank-2-w" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>V(м3):</th>
                                            <td><input id="tank-2-v" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>V15(м3):</th>
                                            <td><input id="tank-2-v" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>M(т):</th>
                                            <td><input id="tank-2-m" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>P(кг/м3):</th>
                                            <td><input id="tank-2-pd" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>P15(кг/м3):</th>
                                            <td><input id="tank-2-ps" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                        <tr>
                                            <th>T(°С):</th>
                                            <td><input id="tank-2-t" type="number" disabled="disabled" class="form-control-sm input-tank-volume" /></td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="tank-pb">
                                    <div class="progressbar">
                                        <span class="progressbar-value" id="pb-2-value">
                                            <em class="progressbar-cover" id="pb-2-cover"></em>
                                        </span>
                                    </div>
                                </div>
                                <div class="cls"></div>
                            </fieldset>
                        </div>
                        <div class="cls"></div>
                    </div>
                    <div class="cls"></div>
                </fieldset>
            </div>
        </div>
    </div>
</div>